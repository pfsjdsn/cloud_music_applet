.user_container {
  width: 100%;
  height: 100%;
}
.user_container .user_section {
  height: 520rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}
.user_container .user_section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  filter: blur(2rpx);
}
.user_container .user_section .user_info_box {
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}
.user_container .user_section .user_info_box .portrait_box image {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.user_container .user_section .user_info_box .info_box .username {
  font-size: 24rpx;
  color: #303133;
  margin: 0 0 0 20rpx;
}
.user_container .user_section .vip_card_box {
  position: relative;
  display: flex;
  flex-direction: column;
  background: rgba(0, 0, 0, 0.7);
  height: 200rpx;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}
.user_container .user_section .vip_card_box .card_bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.user_container .user_section .vip_card_box .opening {
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36323c;
  border-radius: 20rpx;
  background: #f9e6af;
  z-index: 1;
}
.user_container .user_section .vip_card_box .tit {
  font-size: 22rpx;
  color: #f7d680;
  margin: 0 0 28rpx 0;
}
.user_container .user_section .vip_card_box .tit .iconfont {
  color: #f6e5a3;
  margin: 0 16rpx 0 0;
}
.user_container .user_section .vip_card_box text.e-m {
  font-size: 34rpx;
  margin: 10rpx 0 0 0;
}
.user_container .user_section .vip_card_box text.e-b {
  font-size: 24rpx;
  color: #d8cba9;
  margin: 10rpx 0 0 0;
}
.user_container .cover_container {
  margin: -150rpx 0 0 0;
  padding: 0 30rpx;
  position: relative;
  background: #f5f5f5;
  padding: 0 0 20rpx 0;
}
.user_container .cover_container .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
.user_container .cover_container .nav_section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}
.user_container .cover_container .nav_section .nav_item {
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_container .cover_container .nav_section .nav_item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.user_container .cover_container .nav_section .nav_item text:last-child {
  font-size: 22rpx;
}
.user_container .cover_container .personl_content {
  background: #fff;
  margin: 20rpx 0 0 0;
}
.user_container .cover_container .personl_content .recent_play_container .title {
  padding: 0 0 0 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}
.user_container .cover_container .personl_content .recent_play_container .recent_scroll {
  display: flex;
  height: 200rpx;
}
.user_container .cover_container .personl_content .recent_play_container scroll-view {
  display: flex;
  height: 160rpx;
}
.user_container .cover_container .personl_content .recent_play_container scroll-view .recent_item {
  margin: 0 20rpx 0 0;
}
.user_container .cover_container .personl_content .recent_play_container scroll-view .recent_item img {
  width: 160rpx;
  height: 160rpx;
  margin: 0 0 0 20rpx;
  border-radius: 20rpx;
}
.user_container .cover_container .personl_content .card_list {
  margin: 20rpx 0 0 0;
}
.user_container .cover_container .personl_content .card_list .card_item {
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.user_container .cover_container .personl_content .card_list .card_item text.more {
  float: right;
}
