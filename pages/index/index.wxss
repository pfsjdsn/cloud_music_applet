.index_container .banners {
  width: 100%;
  height: 300rpx;
}
.index_container .banners image {
  width: 100%;
  height: 100%;
}
.index_container .nav_container {
  display: flex;
}
.index_container .nav_container .nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.index_container .nav_container .nav_item text {
  font-size: 26rpx;
}
.index_container .nav_container .nav_item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #f01313;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.index_container .recommend_container {
  padding: 20rpx;
}
.index_container .recommend_container .header {
  margin: 0 0 20rpx 0;
}
.index_container .recommend_container .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.index_container .recommend_container .header > view .more {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}
.index_container .recommend_scroll {
  display: flex;
}
.index_container .recommend_scroll .sroll_item {
  width: 200rpx;
  margin: 0 20rpx 0 0;
}
.index_container .recommend_scroll .sroll_item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.index_container .recommend_scroll .sroll_item text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
