<view class="video_container">
  <!-- 头部 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">搜索商品</view>
    <image src="/static/images/logo.png"></image>
  </view>
  <!-- 导航 -->
  <scroll-view scroll-x enable-flex class="nav_scroll">
    <view class="nav_item" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="nav_content {{navId == item.id ? 'active' : ''}}" bindtap="changeNav" data-id="{{item.id}}">
        {{item.name}}
      </view>
    </view>
  </scroll-view>
  <!-- 视频列表 -->
  <scroll-view scroll-y class="video_scroll">
 
  </scroll-view>
</view>