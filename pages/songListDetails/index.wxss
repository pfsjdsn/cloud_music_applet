.songListDetails_container .title_container {
  width: 100%;
  height: 40vh;
  background-color: #6b5959;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.songListDetails_container .title_container .header {
  width: 20%;
  display: flex;
  justify-content: space-between;
  font-size: 47rpx;
  font-weight: 600;
  color: #fff;
  position: fixed;
  top: 0;
  right: 0;
}
.songListDetails_container .title_container .user_info {
  border: 1rpx solid red;
  margin: 90rpx 0 0 0;
  width: 100%;
  height: 40vh;
  display: flex;
}
.songListDetails_container .title_container .user_info .user_img {
  position: relative;
  flex: 2;
  width: 250rpx;
  height: 250rpx;
  border-radius: 40rpx;
  background-color: #7d6b6b;
}
.songListDetails_container .title_container .user_info .user_img image {
  position: absolute;
  top: 10rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 40rpx;
}
.songListDetails_container .title_container .user_info .song_describe {
  flex: 3;
}
